generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// Person model - core entity for the app
model Person {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  age       Int?
  bio       String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  meals     Meal[]
}

// Meal model - nutrition tracking feature
model Meal {
  id        Int      @id @default(autoincrement())
  title     String   // e.g., breakfast, lunch, snack, dinner
  calories  Int
  protein   Float    // in grams
  fat       Float    // in grams
  carbs     Float    // carbohydrates in grams
  eatenAt   DateTime @default(now())
  notes     String?  // memo/notes field
  personId  Int
  person    Person   @relation(fields: [personId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([personId])
}
